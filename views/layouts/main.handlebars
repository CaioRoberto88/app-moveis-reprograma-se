<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    {{!-- BOOTSTRAP 5 --}}
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>
    {{!-- BOOTSTRAP ICONS --}}
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
    />
    {{!-- ARQUIVOS DE ESTILO LOCAL --}}
    <link rel="stylesheet" href="/css/styles.css" />
    <title>Front-end - APP Móveis - Reprograma-se</title>
  </head>
  <body>
    <nav class="navbar navbar-menu navbar-expand-lg">
      <div class="container">
        <span class="navbar-brand">
          <a class="text-white" href="https://front-end-app-moveis-reprograma-se-2023.caioroberto8.repl.co">
          <img class="img-logo" src="/img/logo.png" alt="APP Móveis"> 
          APP Móveis
          </a>
        </span>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".collapse">
        <span class="navbar-toggler-icon"></span>
        </button>
          <div class="collapse navbar-collapse">
          <ul class="navbar-nav ms-auto">
          {{#if session.dados.token}}
          <li class="nav-item">
            <a class="nav-link" href="/moveis/moveis"><i class="bi bi-card-list text-white fs-4"></i> Móveis</a>
          </li>
         <li class="nav-item">
            <a
              class="nav-link"
              href="/moveis/cadastro"
            ><i class="bi bi-lamp-fill text-white fs-4"></i> Anunciar Móveis</a>
          </li>
          <li class="nav-item">
            <a
              class="nav-link"
              href="/moveis/meusmoveis"
            >Meus Móveis<i class="bi bi-cart-fill text-white fs-4"></i>
             {{#if session.qtd}}
              <span class="alerta-msg text-white">{{session.qtd}}</span>
               {{else}}
               <span class="alerta-msg text-white">0</span>
              {{/if}}
            </a>
          </li>
          <li class="nav-item">
            <a
              class="nav-link"
              href="/moveis/moveisemnegociacao"
            >Móveis em Negociação
             {{#if session.negocioQtd includedZero = true}}
             <span><i class="bi bi-chat-left-dots-fill text-warning fs-4"></i></span>
               {{else}}
               <span><i class="bi bi-chat-left-dots-fill text-white fs-4"></i></span>
              {{/if}}
            </a>
          </li>
          <li class="nav-item">
            <a
              class="nav-link"
              href="/usuarios/editaUsuario/{{session.dados.idUsuario}}"
            ><i class="bi bi-person-fill-gear text-white fs-4"></i> Perfil</a>
          </li>
          <li class="nav-item">
            <a
              class="nav-link"
              href="/logout"
            ><i class="bi bi-person-down text-white fs-4"></i> Sair</a>
          </li>
          {{else}}
           <li class="nav-item">
              <a
                class="nav-link"
                href="/usuarios/cadastro"
              ><i class="bi bi-person-add text-white fs-4"></i> Cadastro</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/usuarios/login"><i class="bi bi-person-up text-white fs-4"></i> Login</a>
            </li>
        </ul>
          </div>
        {{/if}}
      </div>
    </nav>
    <div class="container container-principal">
      {{{body}}}
    </div>
    <footer class="text-center text-white py-5">
      <div class="container">
        <p>APP Móveis</p>
        <p>&copy; 2023 - Todos direitos reservados</p>
        <h6>Nossas Redes Sociais</h6>
        <a href="#"><i class="bi bi-instagram"></i></a>
        <a href="#"><i class="bi bi-facebook"></i></a>
        <a href="#"><i class="bi bi-youtube"></i></a>
      </div>
    </footer>
  </body>
</html>